@using Vault.DATA.Enums;

@model Vault.DATA.UserCard

@{
    ViewData["Title"] = "Create";
}

<h2>Create new cart for user "@ViewBag.UserName"</h2>

<h4>UserCard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomCardName" class="control-label"></label>
                <input asp-for="CustomCardName" class="form-control" />
                <span asp-validation-for="CustomCardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerFullName" class="control-label"></label>
                <input asp-for="OwnerFullName" class="form-control" />
                <span asp-validation-for="OwnerFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardType" class="control-label"></label>
                <select asp-for="CardType" asp-items="@Html.GetEnumSelectList<CardType>()"  class="form-control"></select>
                <span asp-validation-for="CardType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVV" class="control-label"></label>
                <input asp-for="CVV" class="form-control" />
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPaused" /> @Html.DisplayNameFor(model => model.IsPaused)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.UserId">Back to List</a>
</div>


