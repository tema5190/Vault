@model IEnumerable<Vault.DATA.UserCard>

@{
    ViewData["Title"] = "Index";
}

<h2>Cart list for @ViewBag.UserName</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.UserId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomCardName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OwnerFullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpirationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CVV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPaused)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomCardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaused)
            </td>
            <td>
                <a asp-action="SwitchCardPause" asp-route-cardId="@item.Id" asp-route-userId="@ViewBag.UserId">Switch Card Pause</a> |
                <a asp-action="BankCard" asp-route-cardId="@item.Id" asp-route-userId="@ViewBag.UserId">Bank card</a> |
                <a asp-action="Delete" asp-route-cardId="@item.Id" asp-route-userId="@ViewBag.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
